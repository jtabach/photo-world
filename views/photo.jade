extends layout

block links
  link(rel='stylesheet', href='/css/loggedInNavbar.css')
  link(rel='stylesheet', href='/css/photo.css')

block content
  h1 Photo
  .row
    .col-xs-offset-2.col-xs-8
      #photoWrapper
        button.coverPhoto.btn.btn-success(data-photo = photo.id) Make Album Cover Photo
        img(src=photo.photoUrl)
        br
        h2 #{photo.title}
        button.deletePhoto.btn.btn-danger(data-photo = photo.id) Delete Photo
        
block scripts
  script(src="/js/photo.js")
    
